#!/bin/bash
#

top_dir=$(cd $(dirname $(dirname $0)) && pwd)

directories="
    families/supplychain/python/build
"

for dir in $directories
do
    if [ -z $ignore ]
    then
        ignore="$top_dir/$dir"
    else
        ignore="$ignore,$top_dir/$dir"
    fi
done

bandit -ll -r --ignore-nosec $top_dir \
    --exclude $ignore \
    -f html \
    -o /project/sawtooth-supply-chain/build/bandit.html
